<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd1"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/backtologinbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#88FF9800"
        android:text="back"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signupbutton" />

    <EditText
        android:id="@+id/zprn"
        android:layout_width="215dp"
        android:layout_height="41dp"
        android:layout_marginTop="196dp"
        android:layout_marginBottom="196dp"
        android:ems="10"
        android:hint="ZPRN number"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/backtologinbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/f" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:text="Use 8 or more characters"
        app:layout_constraintBottom_toTopOf="@+id/conpwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/conpwd"
        app:layout_constraintTop_toBottomOf="@+id/pwd" />

    <EditText
        android:id="@+id/conpwd"
        android:layout_width="217dp"
        android:layout_height="47dp"
        android:layout_marginTop="127dp"
        android:layout_marginBottom="127dp"
        android:ems="10"
        android:hint="confirm  password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/backtologinbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ei" />

    <EditText
        android:id="@+id/ei"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Email id"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/zprn"
        app:layout_constraintEnd_toEndOf="@+id/l"
        app:layout_constraintStart_toStartOf="@+id/l" />

    <EditText
        android:id="@+id/l"
        android:layout_width="226dp"
        android:layout_height="41dp"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="Last name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/ei"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f" />

    <EditText
        android:id="@+id/f"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/l"
        app:layout_constraintStart_toStartOf="@+id/m"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/m"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="Middle name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/l"
        app:layout_constraintEnd_toEndOf="@+id/ei"
        app:layout_constraintStart_toStartOf="@+id/l"
        app:layout_constraintTop_toTopOf="@+id/f" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="215dp"
        android:layout_height="41dp"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="150dp"
        android:ems="10"
        android:hint="enter  password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/backtologinbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/l" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="14dp"
        android:background="#88FF9800"
        android:text="sign up"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>