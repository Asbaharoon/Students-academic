<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".attendenceact">
    <Button
        android:id="@+id/backface"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:background="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/forma"
        style="@android:style/Widget.Button"
        android:layout_width="109dp"
        android:layout_height="68dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="#00FFC107"
        android:drawableLeft="#00000000"
        android:drawableRight="@color/colorAccent"
        android:selectAllOnFocus="false"
        android:shadowColor="#00FFFFFF"
        android:text="Form"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/attendence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backface"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/attendence"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="#00FFC107"
        android:text="Attendence"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#171819"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setting"
        app:layout_constraintStart_toEndOf="@+id/form"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/settinga"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="#00FFC107"
        android:text="Setting"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/backface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/attendence" />
</androidx.constraintlayout.widget.ConstraintLayout>